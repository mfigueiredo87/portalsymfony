{% extends 'base.html.twig' %}

{% block title %}
    {{parent()}} - Dashboard
{% endblock %}

{% block body %}
{# importando o menu  #}
{{parent()}}

{# {{ dump(pagination) }} #}
  <div class="container">
        <div class="row">
            <div class="col-md-8 cursor">
                {% for post in pagination %}
                <div class="bg-white rounded p-3 my-3"  onclick="window.location.href='{{path('verPost',{id:post.id})}}'">
                    <div class="d-flex bd-highlight">
                        <div class="p-2 flex-grow-1 bd-highlight">
                            <h3>{{ post.titulo }}</h3>
                            <div class="my-3 bg-yellow"> <i class="fa fa-user"></i><strong> Criado por: {{ post.nome }} </strong></div>
                            <div class=" bg-green"><i class="far fa-clock"></i> <strong>Data de Publicação: {{ post.data_publicacao | date('d-m-Y')}}</strong></div>
                        </div>
                        <div class="p-2 bd-highlight">
                            <div class="align-self-center">
                                <img class="rounded" src="{{ asset('uploads/fotos/'~post.foto) }}" width="150px">
                            </div>
                        </div>
                    </div>
                </div>
                 {% endfor%}
            </div>
            <div class="col-md-4">
                <div class="bg-white rounded p-3 my-3">
                    <h4>Comentários</h4>
                </div>
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-center">
        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
{% endblock %}
