{% extends 'base.html.twig' %}

{% block title %}{{parent()}} - Meus Posts{% endblock %}

{% block body %}
{{ parent ()}}
{#    {{ dump(posts) }}#}
    
       <div class="container bg-white rounded my-3 p-4">
           {% for post in posts %}
           <div class="d-flex bd-highlight">
            <div class="p-2 flex-grow-1 bd-highlight">
                <h3>{{ post.titulo }}</h3>
                <div class="my-3" style="color:#3282b8;">
                    <i class="fa fa-thumbs-up"></i><strong> 1 Likes</strong>
                </div>
                <div style="color:#c3f584;">
                    <i class="far fa-clock"></i> <strong>Data de Publicação: {{ post.datapublicacao | date('d-m-Y')}}</strong>
                </div>
            </div>
            <div class="p-2 bd-highlight">
                <div class="align-self-center">
                    <img class="rounded" src="{{ asset('uploads/fotos/'~post.foto) }}" width="150px">
                </div>
            </div>
        </div>
        <hr>

        <div class="alert alert-light" role="alert">
        {{ post.conteudo }}
        </div>
        {# <div class="text-justify my-3">
           <p> {{ post.conteudo }}</p>
        </div> #}
           {% endfor%}
    </div>
    
{% endblock %}

